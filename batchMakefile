	simCtrl_postSimRepeatMaskCluster.py --simDir ${AVG_MAMMALS30_OUT} --log --wait; --chunkSize 50000 simCtrl_postSimRepeatMaskFinish.py --simDir ${AVG_MAMMALS30_OUT}
