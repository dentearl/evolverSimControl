	simCtrl_postSimRepeatMaskCluster.py --simDir ${AVG_MAMMALS_OUT} --log --wait; --chunkSize 100000 simCtrl_postSimRepeatMaskFinish.py --simDir ${AVG_MAMMALS_OUT}
