	simCtrl_postSimRepeatMaskCluster.py --simDir ${AVG_PRIMATES_OUT} --log --wait; --chunkSize 100000 simCtrl_postSimRepeatMaskFinish.py --simDir ${AVG_PRIMATES_OUT}
